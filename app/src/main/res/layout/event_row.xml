<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_gravity="center"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/posterImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/event_demo" />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventName"
                    android:text="Adsophos Event"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventDesc"
                    android:text="Hindi ui "
                    android:maxLines="3"
                    android:maxLength="100"
                    android:ellipsize="end"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:id="@+id/likeEvent"
                android:src="@drawable/ic_favorite_black_18px"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:tint="@color/colorDivider"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:id="@+id/likeCounter"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:layout_marginRight="10dp"/>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:id="@+id/favouriteEvent"
                android:src="@drawable/ic_star_black_48px"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:tint="@color/colorDivider"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:id="@+id/favouriteCounter"
                android:layout_gravity="center"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>