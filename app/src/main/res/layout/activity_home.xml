<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ac.mjcet.mjconnect.Activity.HomeActivity">
    <LinearLayout
        android:background="@android:color/white"
        android:padding="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/syllabus"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/timetable"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/previouspaprers"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/qr"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/about"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/bug"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
