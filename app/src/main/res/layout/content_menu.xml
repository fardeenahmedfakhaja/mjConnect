<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.ac.mjcet.mjconnect.Activity.MenuActivity"
    tools:showIn="@layout/activity_menu">
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="4"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/adsophos_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_border"
                android:padding="15dp"
                android:src="@drawable/adsophos"
                android:tint="@color/colorPrimary" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/syllabus_SIV"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/syllabus"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/time_table_SIV"
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/timetable"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/previous_papers_SIV"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/previouspaprers"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/qr_SIV"
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/qr"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/about_SIV"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/about"
                android:background="@drawable/home_border"
                />
            <in.ac.mjcet.mjconnect.Utils.SquareImageView
                android:id="@+id/bug_SIV"
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:src="@drawable/upload"
                android:background="@drawable/home_border"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
